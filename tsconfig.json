{
  "compilerOptions": {
    "target": "ES5",
    "outDir": "./build/",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": ["./src/**/**/*", "postcss.config.js"],
  "includes": ["./src/externals.d.ts"]
}
